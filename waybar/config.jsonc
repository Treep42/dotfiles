    },
    "memory": {
        "format": "{percentage}% ",
        "tooltip": true,
        "tooltip-format": "{used:0.1f}GiB / {swapUsed:0.1f}GiB swap"
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "{essid} {icon}",
        "format-ethernet": "{ifname} ",
        "tooltip-format": "{ifname}: {ipaddr} via {gwaddr} ",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "⚠",
        "format-alt": "{ipaddr}/{cidr} ",
        "format-icons": ["󰤟", "󰤢", "󰤥", "󰤨"]
    },
    "custom/updates": {
        // https://github.com/coffebar/waybar-module-pacman-updates
        // yay -S waybar-module-pacman-updates-git
        "format": "{} {icon}",
        "return-type": "json",
        "format-icons": {
            "has-updates": "",
            "updated": ""
        },
        "exec-if": "which waybar-module-pacman-updates",
        "exec": "waybar-module-pacman-updates --tooltip-align-columns"
    },
    "custom/weather": {
        // https://github.com/bjesus/wttrbar
        // yay -S wttrbar
        "format": "{}",
        "tooltip": true,
        "interval": 3600,
        "return-type": "json",
        "exec-if": "which wttrbar",
        "exec": "wttrbar --hide-conditions --custom-indicator '{ICON} {FeelsLikeC}°/{temp_C}°' --lang de --location 'Münster, Germany'"
    }
}
]
